<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme (make sure your manifest uses android:theme="@style/AppTheme") -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- TextView: consistent typography (using default system font) -->
    <style name="CustomTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Button: uses MaterialComponents for ripple and rounded corners -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- CheckBox: clean look -->
    <style name="CustomCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
